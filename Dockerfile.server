FROM node:20-alpine

WORKDIR /app

# Copy all package files first
COPY package*.json ./
COPY server/package*.json ./server/
COPY shared/package*.json ./shared/

# Copy source code
COPY shared ./shared
COPY server ./server

# Build shared package first
WORKDIR /app/shared
RUN npm install && npm run build

# Install and build server
WORKDIR /app/server
RUN npm install

EXPOSE 3000

CMD ["npm", "start"]
